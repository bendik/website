---
layout: layouts/guides
css: css/layouts/walkthroughs.css
wideLayout: true
---

<%
function renderWalkthroughHeader () {
  return `
    <h1>${title}</h1>
    <h4><a href="${exampleLink}">A complete example</a></h4>
  `
}

function renderWalkthroughFooter () {
  return `<h2>Footer here</h2>`
}
%>

<main>
  <div class="walkthrough-header">
    <%- renderWalkthroughHeader() %>
  </div>
  <div class="walkthrough-content">
    <%- content %>
  </div>
  <div class="walkthrough-footer">
    <%- renderWalkthroughFooter() %>
  </div>
</main>
